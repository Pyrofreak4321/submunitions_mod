<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="MakeableShellBase">
    <defName>SM_Shell_HEAT</defName>
    <label>HEAT shell</label>
    <description>Standard Anti-Armor HEAT shell.</description>
    <graphicData>
      <texPath>Submunition/Item/Shell_Napalm</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>1</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>1</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>
          <min>30</min>
          <max>60</max>
        </wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>SM_Bullet_Shell_HEAT</projectileWhenLoaded>
    <costList>
      <Steel>30</Steel>
      <Chemfuel>25</Chemfuel>
    </costList>
    <recipeMaker>
      <workAmount>1600</workAmount>
      <researchPrerequisite>Submunitions</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>60</MarketValue>
      <Mass>5</Mass>
    </statBases>
  </ThingDef>
 
  <ThingDef ParentName="BaseBullet">
    <defName>SM_Bullet_Shell_HEAT</defName>
    <label>HEAT shell</label>
    <graphicData>
      <texPath>Submunition/Item/Bullet_Shell_Napalm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Submunition.Projectile_Submunition</thingClass>
    <projectile>
      <damageDef>SM_Shrapnel</damageDef>
      <speed>41</speed>
      <damageAmountBase>15</damageAmountBase>
      <explosionRadius>.5</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
    <modExtensions>
      <li Class="Submunition.DefSubmunitionExtension">
        <submunitionCount>1</submunitionCount>
        <submunitionExplosionRadius>.5</submunitionExplosionRadius>
        <submunitionDelay>0</submunitionDelay>
        <submunitionPreDetonation>1</submunitionPreDetonation>
        <submunitionDuration>1</submunitionDuration>
        <submunitionInterval>1</submunitionInterval>
        <submunitionDamageDef>SM_AP_Bomb</submunitionDamageDef>
        <submunitionDamageAmount>100</submunitionDamageAmount>
        <submunitionDestroyOnImpact>false</submunitionDestroyOnImpact>
  <!--    <submunitionSpawnThingDef>SM_Gas_Napalm</submunitionSpawnThingDef>
        <submunitionSpawnThingChance>1</submunitionSpawnThingChance> -->
      </li>
    </modExtensions>
  </ThingDef>
</Defs>